# OpenAI Realtime API Configuration
# Copy this file to .env and configure your settings

# Environment
NODE_ENV=production

# Server Port
PORT=3001

# Railway/Render/Heroku auto-set these:
# RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app
# RENDER_EXTERNAL_URL=https://your-app.onrender.com

# OpenAI Model Selection (2025 Models)
# Options: gpt-realtime, gpt-4o-realtime-preview, gpt-4o-mini-realtime (coming soon)
REALTIME_DEFAULT_MODEL=gpt-realtime

# Voice Selection (11 Available Voices)
# Original: alloy, echo, shimmer, nova, onyx, fable
# New Oct 2024: ash, ballad, coral, sage, verse
REALTIME_DEFAULT_VOICE=alloy

# System Instructions
REALTIME_DEFAULT_INSTRUCTIONS=You are a helpful assistant. Be concise and natural in your responses.

# Voice Activity Detection (VAD) Mode
# Options: server_vad, semantic_vad, none
REALTIME_VAD_MODE=server_vad

# VAD Configuration
REALTIME_VAD_THRESHOLD=0.5
REALTIME_VAD_PREFIX_MS=300
REALTIME_VAD_SILENCE_MS=500

# Response Generation
REALTIME_TEMPERATURE=0.8
REALTIME_MAX_TOKENS=4096

# Enable Input Audio Transcription
# Set to 'true' to enable whisper-1 transcription of user input
REALTIME_TRANSCRIBE_INPUT=false

# Audio Formats (for non-Twilio deployments)
# Options: pcm16, g711_ulaw, g711_alaw
# Note: Twilio always uses g711_ulaw
REALTIME_INPUT_AUDIO_FORMAT=g711_ulaw
REALTIME_OUTPUT_AUDIO_FORMAT=g711_ulaw

# OpenAI Organization (optional)
OPENAI_ORG_ID=

# OpenAI Project (optional)
OPENAI_PROJECT_ID=

# Modalities (comma-separated)
# Options: audio, text, image
REALTIME_MODALITIES=audio,text

# Tool Choice
# Options: auto, none, required, or specific function name
REALTIME_TOOL_CHOICE=auto

# Session Timeout (seconds before ephemeral token expires)
REALTIME_EXPIRES_SECONDS=600

# Reusable Prompt Configuration (2025 Feature)
# Set these to use a saved prompt across sessions
REALTIME_PROMPT_ID=
REALTIME_PROMPT_VERSION=

# MCP Server Configuration (2025 Feature)
# Example: ws://localhost:8765
REALTIME_MCP_SERVER_URL=
REALTIME_MCP_TOOLS=

# Function Tools Configuration
# JSON string of function definitions
# Example: [{"type":"function","function":{"name":"get_weather","description":"Get weather","parameters":{}}}]
REALTIME_TOOLS=[]